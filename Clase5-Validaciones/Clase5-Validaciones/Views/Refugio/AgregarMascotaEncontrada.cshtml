@model Clase5_Validaciones.Models.Mascota
@{
    List<Clase5_Validaciones.Models.Especie> especies = (List<Clase5_Validaciones.Models.Especie>)ViewData["Especies"];
    List<System.Drawing.Color> colores = (List<System.Drawing.Color>)ViewData["Colores"];
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function () {
        //$('select').select2();
    });
</script>

<partial name="/Views/Shared/_ValidationScriptsPartial.cshtml"/>
<form action="/Refugio/AgregarMascotaEncontrada" method="post" enctype="multipart/form-data">
    <div>
        Especie:
        <select asp-for="Especie.Id">
            <option value="">Seleccione una especie</option>
            @foreach (var e in especies)
            {
                <option value="@e.Id">@e.Nombre</option>
            }
        </select>
        <span asp-validation-for="Especie.Id"></span>
    </div>
    <div>
        Estado: <textarea asp-for="Estado"></textarea>
        <span asp-validation-for="Estado"></span>
    </div>
    <div>
        Peso: <input type="number" asp-for="Peso" value="" />
        <span asp-validation-for="Peso"></span>
    </div>

    <partial name="/Views/Shared/_ColoresPartial.cshtml" model="@colores" />

    <div>
        Nombre: <input type="text" asp-for="Nombre" value="" />
        <span asp-validation-for="Nombre"></span>
    </div>
    <div>
        Datos de contacto: <textarea name="DatosDeContacto"></textarea>
        <span asp-validation-for="DatosDeContacto"></span>
    </div>
    <div>
        Fotos: <input type="file" name="Foto1" value="" />
        <input type="file" name="Foto2" value="" />
        <input type="file" name="Foto3" value="" />
    </div>

    <input type="submit" value="Agregar" />

</form>